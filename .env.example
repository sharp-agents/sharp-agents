# Sharp Agents Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///sharp_agents.db
# For PostgreSQL: postgresql://username:password@localhost:5432/sharp_agents
# For MySQL: mysql://username:password@localhost:3306/sharp_agents

# API URLs
POLYMARKET_API_URL=https://clob.polymarket.com

# Kalshi API Configuration
# Use https://api.elections.kalshi.com/trade-api/v2 for sports/prediction markets (NFL, etc.)
# Use https://api.elections.kalshi.com/v1 for political markets only
KALSHI_API_URL=https://api.elections.kalshi.com/trade-api/v2

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
POLYMARKET_API_KEY=your_polymarket_api_key_here
KALSHI_API_KEY=your_kalshi_api_key_here
KALSHI_API_SECRET=your_kalshi_api_secret_here

# Application Settings
LOG_LEVEL=INFO
ARBITRAGE_MIN_THRESHOLD=0.02
SCRAPE_INTERVAL_SECONDS=300

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_PORT=8000

# Kalshi API Configuration
KALSHI_REQUEST_TIMEOUT=10
SAFE_MODE=true
